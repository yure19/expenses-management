@model ExpensesMgmtWeb.Models.PurchasedProduct

@{
    ViewData["Title"] = "Edit";
}

<div class="border my-2">
    <h6 class="mt-3 font-italic m-3">Edit the purchased product data:</h6>
</div>

<div class="container border py-2">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-3 mr-2">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Price" class="col-form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3 mr-2">
                <label asp-for="MeasureUnit" class="col-form-label"></label>
                <input asp-for="MeasureUnit" class="form-control" />
                <span asp-validation-for="MeasureUnit" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="PurchaseId" class="control-label"></label>
                <select asp-for="PurchaseId" class="form-control" asp-items="ViewBag.PurchaseId"></select>
                <span asp-validation-for="PurchaseId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3">
                <label asp-for="Quantity" class="col-form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <input asp-for="ProductId" class="form-control" value="@ViewBag.ProductId"/>

        <div class="my-3">
            <a asp-action="Index" asp-controller="PurchasedProducts" asp-route-id="@Model.PurchaseId" class="btn bg-info text-white mr-2">Cancel</a>
            <button class="btn bg-info text-white">&nbsp;&nbsp;Edit&nbsp;&nbsp;</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
