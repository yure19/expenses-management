@model ExpensesMgmtWeb.Models.Purchase

@{
    ViewData["Title"] = "Edit";
}

<div class="border my-2">
    <ol class="font-italic">
        <li><h6 class="mt-3">Edit the purchase data:</h6></li>
    </ol>
</div>

<div class="container border">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-3 mr-2">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-3">
                <label asp-for="Date" class="col-form-label"></label>
                <div id="datetimepicker1" class="input-group date" data-target-input="nearest">
                    <input asp-for="Date" class="form-control datetimepicker-input" data-target="#datetimepicker1" type="text"/>
                    <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-3 mr-2">
                <label asp-for="Tax" class="col-form-label"></label>
                <input asp-for="Tax" class="form-control" />
                <span asp-validation-for="Tax" class="text-danger"></span>
            </div>

            <div class="form-group col-3">
                <label asp-for="Store" class="col-form-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId">
                    <option selected>Select the store...</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
        </div>

        <div class="my-3">
            <button class="btn bg-info text-white">Next</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    $(function () {
        $('#datetimepicker1').datetimepicker({
            format: 'MM/DD/YYYY HH:mm:ss'
        });
    })

</script>
